{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false,
        "argsIgnorePattern": "^_"
      }
    ],
    "no-undef": "error",
    "no-console": "off",
    "no-empty": "warn",
    "no-constant-condition": "warn",
    "no-unreachable": "error",
    "no-duplicate-imports": "error",
    "sort-imports": [
      "warn",
      {
        "ignoreCase": true,
        "ignoreDeclarationSort": true
      }
    ],
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": [
      "warn",
      "unix"
    ],
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "semi": [
      "warn",
      "always"
    ],
    "comma-dangle": [
      "warn",
      "never"
    ],
    "no-trailing-spaces": "warn",
    "eol-last": [
      "warn",
      "always"
    ]
  },
  "overrides": [
    {
      "files": [
        "**/*.test.js",
        "**/*.spec.js"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
